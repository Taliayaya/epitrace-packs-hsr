{
  "manifest_version": 3,
  "name": "EPITRACE Packs",
  "version": "1.0",
  "description": "Open your traces with a HSR-style Pull with an animation!",
  "content_scripts": [
    {
      "matches": [
        "*://intra.forge.epita.fr/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/*.png",
        "video/*.mp4"
      ],
      "matches": [
        "*://intra.forge.epita.fr/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://intra.forge.epita.fr/*"
  ]
}